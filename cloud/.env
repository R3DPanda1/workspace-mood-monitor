# Database
POSTGRES_USER=onem2m
POSTGRES_PASSWORD=onem2m_pass
POSTGRES_DB=onem2m

# ACME oneM2M CSE (you are the cloud IN-CSE)
INCSE_HOST=10.100.0.1          # your wg0 IP (cloud side)
INCSE_PORT=8080
INCSE_ID=id-cloud-in-cse       # the CSE-ID your ACME uses
INCSE_NAME=cloud-in-cse        # the CSE-Name inside ACME

# Expected MN peer (Alper)
MNCSE_ID=id-room-mn-cse        # Alper's CSE-ID
MNCSE_NAME=room-mn-cse
MNCSE_HOST=10.100.0.2          # Alper's wg0 IP (MN side)
MNCSE_PORT=8081

# CSE + Mood service internal linking
CSE_BASE=http://cloud-in-cse:8080/~/id-room-mn-cse/-/moodMonitorAE/Room01/moodAnalysis
CSE_ORIGIN=CAdmin
MOOD_NOTIFY=http://mood:8088/notify
ROOM_IDS=room-101,room-102

# Grafana
GRAFANA_ADMIN_PASSWORD=admin

# Mood lamp PUT configuration
# Base host:port for oneM2M PUTs to lamp color (use cloud IN-CSE IP/port)
CSE_PUT_BASE=http://10.100.0.1:8080
# oneM2M RVI version header for PUT
CSE_PUT_RVI=3
# Path components for target resource
CSE_PUT_CSEID=id-room-mn-cse
CSE_PUT_AE=moodMonitorAE
